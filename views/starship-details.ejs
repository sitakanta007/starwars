<html>
    <head></head>
    <body>
        <%- include('./nav.ejs') %>
        <h2> Starship Details </h2>
        <table>
            <tr>
                <td>Name : </td>
                <td> <%= starship.name %> </td>
            </tr>
            <tr>
                <td>Model : </td>
                <td> <%= starship.model %> </td>
            </tr>
            <tr>
                <td>Manufacturer : </td>
                <td> <%= starship.manufacturer %> </td>
            </tr>
            <tr>
                <td>Crew : </td>
                <td> <%= starship.crew %> </td>
            </tr>
            <tr>
                <td>Passengers : </td>
                <td> <%= starship.passengers %> </td>
            </tr>
            <tr>
                <td>Cargo Capacity : </td>
                <td> <%= starship.cargo_capacity %> </td>
            </tr>
            <tr>
                <td>Starship Class : </td>
                <td> <%= starship.starship_class %> </td>
            </tr>
            <tr>
                <td><b>Count : </b></td>
                <td><b><%= starship.count %> </b></td>
            </tr>
            <tr>
                <td>Update Count : </td>
                <td>
                    <form action='/starships/<%= starship._id %>' method='post'>
                        <input class="count" name="count" value="" />
                        <button class="update">Submit</button>
                    </form>  
                </td>
            </tr>
        </table>
    </body>
</html>